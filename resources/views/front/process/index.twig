{% extends "front.layouts.app" %}

{% block content %}
    <div class="jumbotron">
        <h2>Процессы для {{ user.name }}</h2>
    </div>

    <div class="row">
        <div class="col-lg-12">
            {% for item in list %}
                <div class="alert alert-success" role="alert">
                    <div class="row">
                        <div class="col-md-10">{{ item.name }}</div>
                        <div class="col-md-2 text-right">
                            <button type="button" class="btn btn-success btn-add-copy"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="col-lg-12 form-add-copy" style="display: none">
            <form class="row">
                <div class="form-group col-md-10">
                    <label class="sr-only">*</label>
                    <input type="text" name="title"  class="form-control" placeholder="Пиши текст" required>
                </div>
                <div class="col-md-2 text-right">
                    <button type="submit" class="btn btn-default btn-block submit-copy"><span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span></button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block script %}
<script>


    $(document).ready(function(){
        $('.btn-add-copy').on('click', function(){
            $('.form-add-copy').insertAfter($(this).parents('.alert')).show();
        });

        $('form').on('submit', function(){
            var text = $('[name="title"]').val();
            $('<p>').html(text + ' <span class="label label-danger">Добавлено!</span>').insertBefore($('.form-add-copy'));
            $('.form-add-copy').hide();
            $('[name="title"]').val('')

            return false;
        });
    });
</script>
{% endblock %}