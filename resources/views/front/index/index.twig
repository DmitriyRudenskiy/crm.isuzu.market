{% extends "front.layouts.app" %}

{% block content %}
    <div class="jumbotron">
        <h2>Заявки ожидающие звонка</h2>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Номер</th>
                    <th>Добавлен</th>
                    <th>Источник</th>
                    <th>Регион</th>
                </tr>
                </thead>
                <tbody>
                {% for item in list %}
                    <tr>
                        <td>+7{{ item.number }}</td>
                        <td>{{ item.created_at | date ("d.m.Y H:i") }}</td>
                        <td>{% if item.vendor is not empty %}{{ item.vendor }}{% else %}не указан{% endif %}</td>
                        <td>{% if item.group_city is not empty %}{{ item.group_city }}{% else %}не указан{% endif %}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <script>
        setTimeout(function () {
            location.reload()
        }, 60000);
    </script>
{% endblock %}