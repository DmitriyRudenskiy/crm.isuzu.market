{% extends "front.layouts.app" %}

{% block content %}
    <div class="jumbotron">
        <h2>РЕГЛАМЕНТЫ АВТОСЕРВИСА</h2>
    </div>

    <div class="row">
        <div class="col-lg-12">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Ответственный</th>
                        <th>Регламент</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for item in list %}
                            <tr>
                                <td class="text-nowrap">{{ item.worker }}</td>
                                <td>{{ item.content }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
        </div>
    </div>
{% endblock %}