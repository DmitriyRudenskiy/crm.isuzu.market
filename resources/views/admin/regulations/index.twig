{% extends "admin.layouts.app" %}

{% block title %}Поставленные задачи{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-lg-7 col-md-12" style="padding-bottom: 24px">

            <h1>Регламенты</h1>

            <div class="row">
                <div class="col-md-8 col-xs-12">
                </div>
                <div class="col-md-4 col-xs-12">
                    <a href="{{ route('admin_regulations_add') }}" class="btn btn-success btn-block">Добавить новый регламент</a>
                </div>
            </div>
        </div>

        <div class="col-lg-7 col-md-12">

            {% if list.total > 0 %}
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Ответственный</th>
                        <th>Регламент</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in list %}
                        <tr>
                            <td class="text-nowrap">{{ item.worker }}</td>
                            <td>{{ item.content }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                {{ list.render() | raw }}
            {% else %}
                <div class="alert alert-danger" role="alert">Нет ни одной задачи</div>
            {% endif %}
        </div>
    </div>
{% endblock %}