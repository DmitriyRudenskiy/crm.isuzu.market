{% extends "admin.layouts.app" %}

{% block title %}Телефоны{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-lg-5 col-md-7">
            <h1>Добавить новый автомобиль</h1>

            <form method="post" action="{{ route('admin_spare_parts_insert') }}">
                {{ csrf_field() }}
                <div class="form-group">
                    <label>Дата заезда <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="start_work" value="" required>
                </div>

                <div class="form-group">
                    <label>Компания <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="company" value="" required>
                </div>

                <div class="form-group">
                    <label>VIN <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="vin" value="" required>
                </div>

                <div class="form-group">
                    <label>Вид работ <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="type" value="" required>
                </div>

                <div class="form-group">
                    <label>Примечание</label>
                    <textarea class="form-control" rows="7" name="comment"></textarea>
                </div>

                <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> Создать</button>
            </form>
        </div>
    </div>
{% endblock %}